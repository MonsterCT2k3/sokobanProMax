<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <solid android:color="#80000000" />
        </shape>
    </item>

    <!-- Main background -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient
                android:startColor="#FF1976D2"
                android:endColor="#FF0D47A1"
                android:angle="90" />
            <stroke
                android:width="2dp"
                android:color="#FF42A5F5" />
        </shape>
    </item>

    <!-- Highlight overlay -->
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <gradient
                android:startColor="#33FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="90" />
        </shape>
    </item>
</layer-list>


