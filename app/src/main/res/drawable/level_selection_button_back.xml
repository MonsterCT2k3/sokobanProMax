<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient background - Blue theme for level selection -->
    <gradient
        android:startColor="#FF1976D2"
        android:endColor="#FF0D47A1"
        android:angle="45" />

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#FF002171" />

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Padding -->
    <padding
        android:left="20dp"
        android:top="10dp"
        android:right="20dp"
        android:bottom="10dp" />

</shape>
