<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient background -->
    <gradient
        android:startColor="#FF757575"
        android:endColor="#FF424242"
        android:angle="45" />

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#FF212121" />

    <!-- Rounded corners -->
    <corners android:radius="20dp" />

    <!-- Padding -->
    <padding
        android:left="25dp"
        android:top="12dp"
        android:right="25dp"
        android:bottom="12dp" />

</shape>
