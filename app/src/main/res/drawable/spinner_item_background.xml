<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient background -->
    <gradient
        android:startColor="#FF2196F3"
        android:endColor="#FF0D47A1"
        android:angle="45" />

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#FF1976D2" />

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Padding -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />

</shape>
