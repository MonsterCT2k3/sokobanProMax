<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Base gradient background -->
    <item>
        <shape>
            <gradient
                android:startColor="#001122"
                android:centerColor="#002244" 
                android:endColor="#003366"
                android:angle="45"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Overlay pattern for texture -->
    <item android:alpha="0.1">
        <shape>
            <gradient
                android:startColor="#FFD700"
                android:centerColor="#00000000"
                android:endColor="#FFD700"
                android:angle="90"
                android:type="radial"
                android:gradientRadius="400dp"
                android:centerX="0.3"
                android:centerY="0.7" />
        </shape>
    </item>
    
    <!-- Secondary overlay -->
    <item android:alpha="0.05">
        <shape>
            <gradient
                android:startColor="#00FF7F"
                android:centerColor="#00000000"
                android:endColor="#87CEEB"
                android:angle="135"
                android:type="radial"
                android:gradientRadius="300dp"
                android:centerX="0.8"
                android:centerY="0.2" />
        </shape>
    </item>
    
</layer-list>
