<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient background -->
    <gradient
        android:startColor="#FF2196F3"
        android:endColor="#FF1976D2"
        android:angle="45" />

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#FF0D47A1" />

    <!-- Rounded corners -->
    <corners android:radius="25dp" />

    <!-- Padding -->
    <padding
        android:left="20dp"
        android:top="15dp"
        android:right="20dp"
        android:bottom="15dp" />

</shape>
