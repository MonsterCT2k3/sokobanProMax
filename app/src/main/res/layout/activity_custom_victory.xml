<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_victory_background"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp">

    <!-- Victory Crown Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/custom_victory_crown_bg"
        android:padding="32dp"
        android:layout_marginBottom="32dp"
        android:elevation="12dp">

        <TextView
            android:id="@+id/tvCustomVictoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🎨 CUSTOM LEVEL COMPLETED!"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFD700"
            android:fontFamily="monospace"
            android:layout_marginBottom="16dp"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Congratulations on mastering your creation!"
            android:textSize="16sp"
            android:textColor="#FFF8DC"
            android:fontFamily="monospace"
            android:gravity="center"
            android:alpha="0.9" />

    </LinearLayout>

    <!-- Level Info Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/custom_victory_info_bg"
        android:padding="24dp"
        android:layout_marginBottom="16dp"
        android:elevation="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🎯 LEVEL DETAILS"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFD700"
            android:fontFamily="monospace"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvCustomLevelInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Map Size: 15x15\nBoxes: 3\nMonsters: 2"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:fontFamily="monospace"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvCustomStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🎯 All boxes placed!\n👾 Monsters defeated!\n⭐ Level mastered!"
            android:textSize="16sp"
            android:textColor="#87CEEB"
            android:fontFamily="monospace"
            android:gravity="center" />

    </LinearLayout>

    <!-- Time Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/custom_victory_time_bg"
        android:padding="20dp"
        android:layout_marginBottom="24dp"
        android:elevation="6dp">

        <TextView
            android:id="@+id/tvCustomTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⏱️ Completion Time: 02:45"
            android:textSize="18sp"
            android:textColor="#FFD700"
            android:fontFamily="monospace"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <!-- Play Again Button -->
        <Button
            android:id="@+id/btnCustomPlayAgain"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:text="🔄 CHƠI LẠI LEVEL"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:fontFamily="monospace"
            android:background="@drawable/custom_victory_play_again_btn"
            android:layout_marginBottom="16dp"
            android:elevation="8dp" />

        <!-- Create New Level Button -->
        <Button
            android:id="@+id/btnCustomCreateNew"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:text="🎨 TẠO LEVEL MỚI"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:fontFamily="monospace"
            android:background="@drawable/custom_victory_create_btn"
            android:layout_marginBottom="16dp"
            android:elevation="8dp" />

        <!-- Back to Menu Button -->
        <Button
            android:id="@+id/btnCustomBackToMenu"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:text="🏠 QUAY LẠI MENU"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:fontFamily="monospace"
            android:background="@drawable/custom_victory_menu_btn"
            android:elevation="8dp" />

    </LinearLayout>

</LinearLayout>

</ScrollView>
