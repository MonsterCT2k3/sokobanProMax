<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pixel_background"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/titleGameMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHẾ ĐỘ CHƠI"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#FFD700"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:fontFamily="monospace"
        android:background="@drawable/game_mode_title_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp" />

    <!-- Mode Buttons Container -->
    <LinearLayout
        android:id="@+id/modeButtonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:spacing="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp">

        <!-- Classic Mode Button -->
        <Button
            android:id="@+id/btnClassicMode"
            android:layout_width="320dp"
            android:layout_height="80dp"
            android:text="🎯 CHƠI THEO MÀN\n(Classic Mode)"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/game_mode_classic_button"
            android:layout_marginBottom="30dp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:lineSpacingExtra="8dp" />

        <!-- Survival Mode Button -->
        <Button
            android:id="@+id/btnSurvivalMode"
            android:layout_width="320dp"
            android:layout_height="80dp"
            android:text="🏃 CHẾ ĐỘ SINH TỬ\n(Survival Mode)"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/game_mode_survival_button"
            android:fontFamily="monospace"
            android:gravity="center"
            android:lineSpacingExtra="8dp" />

    </LinearLayout>

    <!-- Back to Menu Button -->
    <Button
        android:id="@+id/btnBackToMenu"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="🏠 QUAY LẠI MENU"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/game_mode_back_button"
        android:fontFamily="monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="80dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
