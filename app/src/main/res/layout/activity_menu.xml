<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pixel_background"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sokoban Pro"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="#FFD700"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:fontFamily="monospace"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp" />

    <!-- Menu Buttons Container -->
    <LinearLayout
        android:id="@+id/menuButtonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:spacing="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Play Button -->
        <Button
            android:id="@+id/btnPlay"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:text="PLAY"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/pixel_button_primary_pressed"
            android:layout_marginBottom="20dp"
            android:fontFamily="monospace" />

        <!-- History Button -->
        <Button
            android:id="@+id/btnHistory"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:text="HISTORY"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/pixel_button_secondary_pressed"
            android:layout_marginBottom="20dp"
            android:fontFamily="monospace" />

        <!-- Record Button -->
        <Button
            android:id="@+id/btnRecord"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:text="RECORD"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/pixel_button_secondary_pressed"
            android:layout_marginBottom="20dp"
            android:fontFamily="monospace" />

        <!-- Other Button -->
        <Button
            android:id="@+id/btnMusic"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:text="MUSIC"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/pixel_button_secondary_pressed"
            android:fontFamily="monospace" />

    </LinearLayout>

    <!-- Version Text -->
    <TextView
        android:id="@+id/versionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v1.0.0"
        android:textSize="16sp"
        android:textColor="#CCCCCC"
        android:fontFamily="monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="36dp" />
    <TextView
        android:id="@+id/licenseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nam-Quang-Trong"
        android:textSize="16sp"
        android:textColor="#CCCCCC"
        android:fontFamily="monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout> 