<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/survival_game_over_background"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp">

    <!-- Title với animation effect -->
    <TextView
        android:id="@+id/tvSurvivalGameOverTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="💀 SURVIVAL FAILED!"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#FF4444"
        android:fontFamily="monospace"
        android:background="@drawable/survival_game_over_title_bg"
        android:padding="20dp"
        android:layout_marginBottom="40dp"
        android:elevation="8dp" />

    <!-- Stats Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/survival_stats_container_bg"
        android:padding="24dp"
        android:layout_marginBottom="32dp"
        android:elevation="4dp">

        <!-- Current Level Failed -->
        <TextView
            android:id="@+id/tvSurvivalCurrentLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Failed at Level: 3"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FF6666"
            android:fontFamily="monospace"
            android:background="@drawable/survival_failed_level_bg"
            android:padding="16dp"
            android:layout_marginBottom="20dp" />

        <!-- Levels Completed -->
        <TextView
            android:id="@+id/tvSurvivalLevelsCompleted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed: 1/3 levels"
            android:textSize="20sp"
            android:textColor="#FFD700"
            android:fontFamily="monospace"
            android:background="@drawable/survival_completed_bg"
            android:padding="14dp"
            android:layout_marginBottom="16dp" />

        <!-- Time Played -->
        <TextView
            android:id="@+id/tvSurvivalTimePlayed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Time: 05:45"
            android:textSize="18sp"
            android:textColor="#87CEEB"
            android:fontFamily="monospace"
            android:background="@drawable/survival_time_bg"
            android:padding="12dp" />

    </LinearLayout>

    <!-- Buttons Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <!-- Retry Button -->
        <Button
            android:id="@+id/btnSurvivalRetry"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:text="🔄 THỬ LẠI SURVIVAL"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:fontFamily="monospace"
            android:background="@drawable/survival_retry_button"
            android:layout_marginBottom="20dp"
            android:elevation="6dp" />

        <!-- Back to Menu Button -->
        <Button
            android:id="@+id/btnSurvivalGameOverBackToMenu"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:text="🏠 QUAY LẠI MENU"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:fontFamily="monospace"
            android:background="@drawable/survival_menu_button"
            android:elevation="6dp" />

    </LinearLayout>

</LinearLayout>

</ScrollView>
