<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="@android:color/black">

    <!-- Title -->
    <TextView
        android:id="@+id/tvSurvivalVictoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🏆 SURVIVAL COMPLETE!"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:fontFamily="monospace"
        android:background="@drawable/game_mode_title_background"
        android:padding="16dp"
        android:layout_marginBottom="32dp" />

    <!-- Total Time -->
    <TextView
        android:id="@+id/tvSurvivalTotalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Time: 05:30"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:fontFamily="monospace"
        android:background="@drawable/time_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Completed Levels -->
    <TextView
        android:id="@+id/tvSurvivalCompletedLevels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Completed Levels: 1, 3, 4"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:fontFamily="monospace"
        android:background="@drawable/time_background"
        android:padding="12dp"
        android:layout_marginBottom="32dp" />

    <!-- Back to Menu Button -->
    <Button
        android:id="@+id/btnSurvivalVictoryBackToMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🏠 QUAY LẠI MENU"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:fontFamily="monospace"
        android:background="@drawable/game_mode_back_button"
        android:padding="16dp" />

</LinearLayout>
