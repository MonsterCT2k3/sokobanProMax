<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_records_background"
    android:padding="16dp">

    <!-- Level Title -->
    <TextView
        android:id="@+id/tvLevelTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="🎉 CHIẾN THẮNG LEVEL 1! 🎉"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:shadowColor="#80000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:background="@drawable/title_background" />

    <!-- Your Time -->
    <TextView
        android:id="@+id/tvYourTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvLevelTitle"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="⏱️ Thời gian của bạn: 01:23 🏆 KỶ LỤC MỚI!"
        android:textColor="#FFD700"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/time_background"
        android:shadowColor="#80000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="3" />

    <!-- Leaderboard Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvYourTime"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="🏆 BẢNG XẾP HẠNG 🏆"
        android:textColor="#FF333333"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/leaderboard_title_background"
        android:shadowColor="#80000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="3" />

    <!-- RecyclerView for leaderboard -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewVictory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/tvYourTime"
        android:layout_above="@id/btnContainer"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <!-- Button Container -->
    <LinearLayout
        android:id="@+id/btnContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2">

        <Button
            android:id="@+id/btnNextLevel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="15dp"
            android:text="🚀 MÀN KẾ TIẾP"
            android:textColor="@android:color/white"
            android:background="@drawable/victory_button_next"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:stateListAnimator="@null"
            android:elevation="8dp"
            android:shadowColor="#80000000"
            android:shadowDx="0"
            android:shadowDy="4"
            android:shadowRadius="8" />

        <Button
            android:id="@+id/btnSelectLevel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="15dp"
            android:text="🎯 CHỌN LEVEL"
            android:textColor="@android:color/white"
            android:background="@drawable/victory_button_select"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:stateListAnimator="@null"
            android:elevation="8dp"
            android:shadowColor="#80000000"
            android:shadowDx="0"
            android:shadowDy="4"
            android:shadowRadius="8" />

    </LinearLayout>

</RelativeLayout>
